<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/answer"
        style="@style/InputOutputView"
        android:text="answer" />

    <TextView
        android:id="@+id/user_input"
        style="@style/InputOutputView"
        android:text="user_input" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/OperatorButton"
            android:text="(">

        </TextView>

        <TextView
            style="@style/OperatorButton"
            android:text=")">

        </TextView>

        <TextView
            style="@style/OperatorButton"
            android:text="Back">

        </TextView>

        <TextView
            style="@style/OperatorButton"
            android:text="C">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/NumberButton"
            android:text="7">

        </TextView>

        <TextView
            style="@style/NumberButton"
            android:text="8">

        </TextView>

        <TextView
            style="@style/NumberButton"
            android:text="9">

        </TextView>

        <TextView
            style="@style/OperatorButton"
            android:text="/">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/NumberButton"
            android:text="4">

        </TextView>

        <TextView
            style="@style/NumberButton"
            android:text="5">

        </TextView>

        <TextView
            style="@style/NumberButton"
            android:text="6">

        </TextView>

        <TextView
            style="@style/OperatorButton"
            android:text="-">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/NumberButton"
            android:text="1">

        </TextView>

        <TextView
            style="@style/NumberButton"
            android:text="2">

        </TextView>

        <TextView
            style="@style/NumberButton"
            android:text="3">

        </TextView>

        <TextView
            style="@style/OperatorButton"
            android:text="+">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/NumberButton"
            android:text="+/-">

        </TextView>

        <TextView
            style="@style/NumberButton"
            android:text="0">

        </TextView>

        <TextView
            style="@style/NumberButton"
            android:text=".">

        </TextView>

        <TextView
            style="@style/OperatorButton"
            android:text="=">

        </TextView>
    </LinearLayout>
</LinearLayout>
